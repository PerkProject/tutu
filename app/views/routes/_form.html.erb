<%= form_for(@route) do |f| %>
    <% if @route.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@route.errors.count, "error") %> prohibited this railway_station from being saved:</h2>

          <ul>
            <% @route.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
